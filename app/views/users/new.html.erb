<html>
<head></head>
<body>
<div style="float:left;">
  <div class="hero-unit-div"></div>

</div>
<div class="hero-unit" >
  <%= form_for(@user, :url => users_sign_up_path, :method => "POST") do |f| %>
      <div >
        <%= f.label :name %>
      </div>
      <div>
        <%= f.text_field :name %>
      </div>

      <div >
        <%= f.label :email %>
      </div>
      <div>
        <%= f.text_field :email %>
      </div>

      <div >
        <%= f.label :password %>
      </div>
      <div>

        <%= f.password_field :password %>
      </div>

      <div >
        <%= f.label :password_confirmation %>
      </div>
      <div>

        <%= f.password_field :password_confirmation %>
      </div>

      <div>
        <%= f.submit "Sign Up", :class => "btn btn-large btn-success"  %>
      </div>
  <% end %>
</div>
</body>
</html>