<div class="hero-unit" align="center"><p>Sign-In</p></div>
<div>
  <%= form_for(:session, :url => sessions_path, :method => "POST") do |f|%>
      <%= render 'sessions/session_error' %>
      <div style="margin-left: 520px">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div style="margin-left: 520px">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div style="margin-left: 600px">
        <%= f.submit "Sign In", :class => "btn" %>
      </div>
      <div style="margin-left: 520px">
        New User ? <%= link_to "Click here to sign up", new_user_path  %>
      </div>
  <% end %>
</div>